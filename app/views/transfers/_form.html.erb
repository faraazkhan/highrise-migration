<%= form_for @transfer, :html => { :class => 'form-horizontal' } do |f| %>
 
  <div class="control-group">
    <%= f.label :source_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :source_url, :class => 'text_field' %>
    </div>
  </div>
   <div class="control-group">
    <%= f.label :source_api_token, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :source_api_token, :class => 'text_field' %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :target_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :target_url, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :target_api_token, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :target_api_token, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transfers_path, :class => 'btn' %>
  </div>
<% end %>
